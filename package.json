{
  "private": true,
  "name": "plustimer-pwa",
  "version": "0.0.0",
  "scripts": {
    "app:start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "app:build": "firebase use default && preact build && preact serve --server config --dest .",
    "app:serve": "npm run build && preact serve",
    "app:dev": "preact watch --port 5000",
    "app:deploy": "firebase use default && npm run app:build && firebase deploy --only hosting",
    "lint": "flow check",
    "precommit": "lint-staged"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie<=11"
  ],
  "eslintConfig": {
    "extends": [
      "react-app",
      "prettier"
    ],
    "rules": {
      "jsx-a11y/href-no-hash": "off",
      "jsx-a11y/anchor-is-valid": [
        "warn",
        {
          "aspects": [
            "invalidHref"
          ]
        }
      ],
      "react/react-in-jsx-scope": "off"
    }
  },
  "lint-staged": {
    "{src,functions}/**/*.{js,json,css,md,es6}": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintIgnore": [
    "build/*"
  ],
  "prettier": {
    "singleQuote": true
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@types/node": "^10.12.9",
    "@types/webpack": "^4.4.19",
    "awesome-typescript-loader": "^5.2.1",
    "babel-eslint": "^10.0.1",
    "concurrently": "^4.0.1",
    "copy-webpack-plugin": "^4.6.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.9.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-react-app": "^3.0.5",
    "eslint-plugin-flowtype": "^3.2.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "firebase-tools": "^6.1.0",
    "husky": "^1.1.4",
    "if-env": "^1.0.4",
    "lint-staged": "^8.0.4",
    "preact-cli": "^3.0.0-next.14",
    "prettier": "^1.15.2",
    "rimraf": "^2.6.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.16.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.1.6",
    "webpack-bundle-analyzer": "^3.0.3",
    "worker-loader": "^2.0.0"
  },
  "dependencies": {
    "asyncro": "^3.0.0",
    "date-fns": "^1.29.0",
    "firebase": "^5.5.8",
    "mitt": "^1.1.3",
    "nano-sql": "^1.7.9",
    "preact": "^8.3.1",
    "preact-compat": "^3.18.3",
    "preact-material-components": "^1.5.4",
    "preact-portal": "^1.1.3",
    "preact-router": "^2.6.1",
    "preact-slots": "^1.0.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-media": "^1.8.0",
    "unistore": "^3.1.0"
  }
}
