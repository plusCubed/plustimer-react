{
  "private": true,
  "name": "plustimer-pwa",
  "version": "0.0.0",
  "scripts": {
    "app:start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "app:build": "preact build",
    "app:build-config": "preact serve --server config",
    "app:serve": "yarn build && preact serve",
    "app:dev": "preact watch",
    "functions:build": "babel \"functions/*.es7\" --out-dir .",
    "functions:serve": "yarn functions:build && firebase serve --only functions",
    "all:build": "yarn app:build && yarn functions:build",
    "all:serve": "yarn all:build && yarn all:serve-only",
    "all:serve-only": "firebase serve --only functions,hosting",
    "lint": "eslint src",
    "precommit": "lint-staged"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "synacor",
      "airbnb",
      "prettier"
    ],
    "rules": {
      "no-unused-vars": "warn",
      "react/sort-comp": "off",
      "lines-around-comment": "off",
      "react/prefer-stateless-function": "off",
      "linebreak-style": "off",
      "react/jsx-filename-extension": "off",
      "object-shorthand": "off"
    }
  },
  "lint-staged": {
    "src/**/*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintIgnore": [
    "build/*"
  ],
  "prettier": {
    "single-quote": true
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-async-to-promises": "^1.0.5",
    "copy-webpack-plugin": "^4.3.0",
    "eslint": "^4.5.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-synacor": "^2.0.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "flow-bin": "^0.61.0",
    "husky": "^0.14.3",
    "if-env": "^1.0.0",
    "lint-staged": "^6.0.0",
    "preact-cli": "^2.0.0",
    "preact-cli-plugin-flow": "^0.2.0",
    "prettier": "^1.9.2",
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "date-fns": "^1.29.0",
    "firebase": "^4.8.1",
    "preact": "^8.2.1",
    "preact-compat": "^3.17.0",
    "preact-router": "^2.5.5",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  }
}
