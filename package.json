{
  "name": "plustimer-react",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "eslint": "^4.10.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.7.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "flow-bin": "^0.61.0",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "prettier": "^1.7.0",
    "rimraf": "^2.6.2"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "next": "cd \"src/app\" && yarn dev",
    "preserve": "yarn build",
    "serve": "firebase serve",
    "predeploy": "yarn build",
    "deploy": "firebase deploy",
    "build": "yarn build-functions && yarn build-app",
    "build-app": "cd \"src/app\" && yarn build",
    "build-functions": "rimraf \"dist/functions\" && babel \"src/functions\" --out-dir \"dist/functions\" --copy-files --ignore \"node_modules\" && cd \"dist/functions\" && yarn"
  },
  "workspaces": [
    "src/*"
  ]
}
