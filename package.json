{
  "private": true,
  "name": "plustimer-pwa",
  "version": "0.0.0",
  "scripts": {
    "app:start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "app:build": "preact build && preact serve --server config --dest build",
    "app:serve": "yarn build && preact serve",
    "app:dev": "cross-env FIREBASE_ENV=development preact watch --port 5000",
    "app:deploy": "firebase use default && yarn app:build && firebase deploy --only hosting",
    "functions:build": "babel functions/*.es6 --out-dir .",
    "functions:dev": "concurrently \"babel functions/*.es6 --watch --out-dir .\" \"yarn functions:dev-serve\"",
    "functions:dev-serve": "firebase use staging && cross-env FIREBASE_ENV=development firebase serve --only functions --port 5001",
    "functions:deploy": "firebase use default && yarn functions:build && firebase deploy --only functions",
    "all:build": "yarn app:build && yarn functions:build",
    "all:dev": "concurrently \"yarn app:dev\" \"yarn functions:dev\"",
    "all:deploy": "firebase use default && yarn all:build && firebase deploy",
    "lint": "eslint src",
    "precommit": "lint-staged"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "synacor",
      "airbnb",
      "prettier"
    ],
    "rules": {
      "no-unused-vars": "warn",
      "react/sort-comp": "off",
      "lines-around-comment": "off",
      "react/prefer-stateless-function": "off",
      "linebreak-style": "off",
      "react/jsx-filename-extension": "off",
      "object-shorthand": "off"
    }
  },
  "lint-staged": {
    "{src,functions}/**/*.{js,json,css,md,es6}": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintIgnore": [
    "build/*"
  ],
  "prettier": {
    "single-quote": true
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.1.2",
    "babel-plugin-async-to-promises": "^1.0.5",
    "babel-plugin-transform-regenerator": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "concurrently": "^3.5.1",
    "copy-webpack-plugin": "^4.3.1",
    "cross-env": "^5.1.3",
    "eslint": "^4.14.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-synacor": "^2.0.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "fast-async": "^6.3.0",
    "flow-bin": "^0.61.0",
    "husky": "^0.14.3",
    "if-env": "^1.0.0",
    "lint-staged": "^6.0.0",
    "preact-cli": "^2.0.0",
    "preact-cli-plugin-flow": "^0.2.0",
    "preact-cli-sw-precache": "^1.0.3",
    "prettier": "^1.9.2",
    "rimraf": "^2.6.2",
    "webpack-bundle-analyzer": "^2.9.1"
  },
  "dependencies": {
    "date-fns": "^1.29.0",
    "firebase": "^4.8.1",
    "preact": "^8.2.1",
    "preact-compat": "^3.17.0",
    "preact-material-components": "^1.3.3",
    "preact-router": "^2.5.5",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-media": "^1.6.1"
  }
}
