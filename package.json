{
  "private": true,
  "name": "plustimer-pwa",
  "version": "0.0.0",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "preact build",
    "build-firebase": "preact build && preact serve --server config",
    "serve": "preact build && preact serve",
    "dev": "preact watch",
    "lint": "eslint src",
    "precommit": "lint-staged"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "synacor",
      "airbnb",
      "prettier"
    ],
    "rules": {
      "no-unused-vars": "warn",
      "react/sort-comp": "off",
      "lines-around-comment": "off",
      "react/prefer-stateless-function": "off",
      "linebreak-style": 0,
      "react/jsx-filename-extension": 0
    }
  },
  "lint-staged": {
    "src/**/*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintIgnore": [
    "build/*"
  ],
  "prettier": {
    "single-quote": true
  },
  "devDependencies": {
    "eslint": "^4.5.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-synacor": "^2.0.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "flow-bin": "^0.61.0",
    "husky": "^0.14.3",
    "if-env": "^1.0.0",
    "lint-staged": "^6.0.0",
    "preact-cli": "^2.0.0",
    "preact-cli-plugin-flow": "^0.2.0",
    "prettier": "^1.9.2"
  },
  "dependencies": {
    "preact": "^8.2.1",
    "preact-compat": "^3.17.0",
    "preact-router": "^2.5.5",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  }
}
