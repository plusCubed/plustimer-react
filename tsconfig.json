{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "lib": [ "esnext", "dom" ],
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "h",
    "allowJs": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "sourceRoot": "src",
    "resolveJsonModule": true
  },
  "include": [
    "src"
  ]
}
